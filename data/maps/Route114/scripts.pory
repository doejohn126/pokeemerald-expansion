    fadescreen(FADE_TO_BLACK)
    setflag(FLAG_MAGMAS_114)
    removeobject(28)
    removeobject(29)
    fadescreen(FADE_FROM_BLACK)
    applymovement(30, Common_Movement_FacePlayer)
    waitmovement(0)
